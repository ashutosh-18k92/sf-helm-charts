{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [ "containerPort", "image", "service" ],
    "properties": {
        "containerPort": {
            "type": "integer",
            "description": "The port number on which the container listens",
            "minimum": 1,
            "maximum": 65535
        },
        "replicaCount": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100
        },
        "image": {
            "type": "object",
            "required": [ "repository" ],
            "properties": {
                "repository": {
                    "type": "string",
                    "minLength": 1
                },
                "tag": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string",
                    "enum": [ "Always", "IfNotPresent", "Never" ]
                }
            }
        },
        "service": {
            "type": "object",
            "required": [ "port", "targetPort" ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [ "ClusterIP", "NodePort", "LoadBalancer" ]
                },
                "port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                },
                "targetPort": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                }
            }
        }
    }
}